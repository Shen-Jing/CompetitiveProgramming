{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Simple Cpp (Ubuntu 20.04)",
      "type": "shell",
      "command": "g++-10",
      "args": [
        "-std=c++20",
        "-Og",
        "-pthread",
        "-g",
        "${fileDirname}/${fileBasenameNoExtension}.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}